{
  "extends": ["config:base", ":preserveSemverRanges"],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "groupName": "rust toolchain",
      "matchManagers": ["custom.regex"],
      "matchDepNames": ["rustc"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:monthly"]
  }
}
